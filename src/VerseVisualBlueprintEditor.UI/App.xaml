<Application x:Class="VerseVisualBlueprintEditor.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Unreal Engine Inspired Theme -->
                <ResourceDictionary Source="Themes/UnrealTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Color Definitions -->
            <Color x:Key="DarkBackground">#1a1a1a</Color>
            <Color x:Key="MediumBackground">#242424</Color>
            <Color x:Key="LightBackground">#2a2a2a</Color>
            <Color x:Key="AccentColor">#00a0ff</Color>
            <Color x:Key="TextColor">#ffffff</Color>
            <Color x:Key="SecondaryText">#b0b0b0</Color>

            <!-- Brushes -->
            <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#1a1a1a"/>
            <SolidColorBrush x:Key="MediumBackgroundBrush" Color="#242424"/>
            <SolidColorBrush x:Key="LightBackgroundBrush" Color="#2a2a2a"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#00a0ff"/>
            <SolidColorBrush x:Key="TextBrush" Color="#ffffff"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#b0b0b0"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
